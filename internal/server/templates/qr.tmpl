{{define "content"}}
<div class="page-header">
  <h2 class="page-title">QR Code - {{.Name}}</h2>
  <p class="page-subtitle">Scan with your WireGuard mobile app to import configuration</p>
</div>

<div class="card">
  <div class="qr-container">
    <div class="qr-image">
      <img src="{{.QRURL}}" alt="QR code for {{.Name}}" style="max-width:240px"/>
      <div style="margin-top: 1rem; display: flex; flex-direction: column; gap: 0.5rem;">
        <a href="/clients/qr.png?name={{.Name}}" download="{{.Name}}.png" class="btn btn-primary">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="7 10 12 15 17 10"></polyline><line x1="12" y1="15" x2="12" y2="3"></line></svg>
          Download PNG
        </a>
        <a href="/clients/config?name={{.Name}}" class="btn btn-outline">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"></path><polyline points="13 2 13 9 20 9"></polyline></svg>
          Download .conf
        </a>
      </div>
    </div>
    
    <div>
      <h3 style="font-size: 1.125rem; font-weight: 600; margin-bottom: 1rem; color: var(--gray-900);">Configuration File</h3>
      <div class="code-block" id="cfgText">{{.Config}}</div>
      <button class="btn btn-secondary mt-2" data-copy-target="#cfgText">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path></svg>
        Copy to Clipboard
      </button>
    </div>
  </div>
  
  <div style="margin-top: 1.5rem; padding-top: 1.5rem; border-top: 1px solid var(--gray-200);">
    <a href="/clients" class="btn btn-outline">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
      Back to Clients
    </a>
  </div>
</div>
{{end}}
{{template "layout" .}}
