{{define "content"}}
<div class="page-header">
  <h2 class="page-title">Settings</h2>
  <p class="page-subtitle">Adjust core WireGuard parameters safely</p>
</div>

<div class="card">
  <div class="card-header">
    <div class="card-title">Server Configuration</div>
  </div>
  {{if .Error}}
    <div class="alert alert-error" style="margin-bottom:1rem;">{{.Error}}</div>
  {{end}}
  {{if .Success}}
    <div class="alert alert-success" style="margin-bottom:1rem;">Settings updated successfully.</div>
  {{end}}
  <form method="post" action="/settings">
    <input type="hidden" name="csrf" value="{{.CSRF}}" />
    <div class="form-grid" style="display:grid;gap:1.25rem;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));">
      <div class="form-group">
        <label for="server_port">Server Port</label>
        <input id="server_port" name="server_port" type="number" min="1" max="65535" required value="{{.S.ServerPort}}" />
        <div class="input-hint">Port the WireGuard interface listens on.</div>
      </div>
      <div class="form-group">
        <label for="dns1">Client DNS 1</label>
        <input id="dns1" name="dns1" type="text" required value="{{.S.ClientDNS1}}" />
        <div class="input-hint">Primary DNS pushed to clients.</div>
      </div>
      <div class="form-group">
        <label for="dns2">Client DNS 2 (optional)</label>
        <input id="dns2" name="dns2" type="text" value="{{.S.ClientDNS2}}" />
      </div>
      <div class="form-group" style="grid-column:1 / -1;">
        <label for="allowed_ips">Allowed IPs</label>
        <input id="allowed_ips" name="allowed_ips" type="text" required value="{{.S.AllowedIPs}}" />
        <div class="input-hint">Comma-separated CIDRs the clients may route (e.g. 0.0.0.0/0, ::/0).</div>
      </div>
    </div>
    <div style="margin-top:1.5rem;display:flex;gap:.75rem;">
      <button class="btn btn-primary" type="submit">Save Changes</button>
      <a href="/settings/password" class="btn btn-outline" type="button">Change Admin Password</a>
    </div>
  </form>
</div>

<div class="card">
  <div class="card-header"><div class="card-title">Danger Zone</div></div>
  <p style="margin-bottom:1rem;">Uninstalling will remove WireGuard and its configuration. This action is irreversible.</p>
  <button class="btn btn-danger" type="button" onclick="openUninstallModal()">Uninstall WireGuard</button>
</div>

<!-- Uninstall Modal -->
<div class="modal" id="uninstallModal" aria-hidden="true">
  <div class="modal-backdrop" onclick="closeUninstallModal()"></div>
  <div class="modal-content">
    <div class="modal-header">
      <h3 style="margin:0;font-size:1.1rem;">Confirm Uninstall</h3>
      <button class="modal-close" type="button" onclick="closeUninstallModal()">&times;</button>
    </div>
    <p style="margin-bottom:1rem;">This will attempt to remove WireGuard packages and configuration. The dashboard may stop working. Continue?</p>
    <div id="uninstallProgress" class="input-hint" style="margin-bottom:0.75rem;"></div>
    <form id="uninstallForm" method="post" action="/uninstall" onsubmit="return submitUninstall(event)">
      <input type="hidden" name="csrf" value="{{.CSRF}}" />
      <div style="display:flex;gap:.75rem;justify-content:flex-end;">
        <button type="button" class="btn btn-outline" onclick="closeUninstallModal()">Cancel</button>
        <button type="submit" class="btn btn-danger">Yes, Uninstall</button>
      </div>
    </form>
  </div>
</div>

<script>
function openUninstallModal(){ document.getElementById('uninstallModal').classList.add('open'); }
function closeUninstallModal(){ document.getElementById('uninstallModal').classList.remove('open'); }
async function submitUninstall(ev){
  ev.preventDefault();
  const prog=document.getElementById('uninstallProgress');
  prog.textContent='Uninstalling...';
  const form=ev.target;
  try {
    const fd=new FormData(form);
    const res=await fetch('/uninstall',{method:'POST',body:fd});
    if(!res.ok){ prog.textContent='Failed: '+res.status; return false; }
    prog.textContent='Uninstall triggered. The service may stop shortly.';
    form.querySelector('button[type="submit"]').disabled=true;
  } catch(e){ prog.textContent='Error: '+e.message; }
  return false;
}
</script>
{{end}}
{{template "layout" .}}
